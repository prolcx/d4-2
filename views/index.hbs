<div class="row">
    <div class="col">
        <form method="POST" action="/">
        
             <div class="form_group">
                <label for="item">Item</label>
                <input type="text" name="" id="item" class="form control" placeholder="Please select an item">
             </div>
    
            <div class="form group">
                <label for="quantity">Quantity</label>
                <input type="number" name="" id="quantity" class="form-control" min="1" placeholder="Please enter the quantity">
            </div>

            <div class="form-group">
                <label for="unitPrice">Unit</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="text" name="" id="unitPrice" class="form-control" placeholder="Cost per unit item">
                </div>
            </div>    
     
            <div class='d-flex justify-content-end'>
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </form>
    </div>
    <div class="col">
        <table class="table mt-3">
            <thead>
                <tr>
                    <td>Item</td>
                    <td>Quantity</td>
                    <td>unit Price</td>
                </tr>
            </thead>
            <tbody>
                {{#each cart}}
                    <tr>
                        <td>{{this.item}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.unit}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>